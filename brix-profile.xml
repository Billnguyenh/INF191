<profile>
    <name>Sign in</name>
   <author>Bootstrap</author>
   <portfolio>http://getbootstrap.com/getting-started/#examples</portfolio>
    <properties>
         <prop type="prop" icon="pencil-square-o">
           <description>Heading</description>
           <selector>.form-signin-heading</selector>
            <file>*</file>
         </prop>
         <prop type="prop" icon="pencil">
           <description>E-mail</description>
           <selector>input[type="email"]</selector>
           <action>select</action>
            <file>*</file>
         </prop>
         <prop type="prop" icon="pencil">
           <description>Password</description>
           <selector>input:password</selector>
           <action>select</action>
           <file>*</file>
         </prop>
         <prop type="prop" icon="pencil">
           <description>Checkbox</description>
           <selector>label[class='checkbox']</selector>
            <file>*</file>
         </prop>
         <prop type="prop" icon="pencil-square-o">
           <description>Submit button</description>
           <selector>button</selector>
            <file>*</file>
         </prop>
       <prop type="class" icon="paint-brush">
           <description>Background color</description>
           <selector>body</selector>
            <file>signin.css</file>
         </prop>
    </properties>
</profile>